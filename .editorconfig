# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
tab_width = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.txt]
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false
indent_style = space
indent_size = 2

[*.yml]
insert_final_newline = false
indent_style = space
indent_size = 2
